{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              },
              // root libraries can only depend on other root libraries
              {
                "sourceTag": "scope:root",
                "onlyDependOnLibsWithTags": ["scope:root"]
              },
              {
                "sourceTag": "scope:rootui",
                "onlyDependOnLibsWithTags": ["scope:rootui"]
              },
              {
                "sourceTag": "scope:types",
                "onlyDependOnLibsWithTags": ["scope:types"]
              },

              // shared libraries can only depend on root and other shared libraries
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": [
                  "scope:root",
                  "scope:shared",
                  "scope:types"
                ]
              },
              {
                "sourceTag": "scope:sharedui",
                "onlyDependOnLibsWithTags": [
                  "scope:rootui",
                  "scope:sharedui",
                  "scope:types"
                ]
              },

              // all other api libraries can only depend on root and shared libraries
              {
                "sourceTag": "type:api",
                "onlyDependOnLibsWithTags": [
                  "scope:root",
                  "scope:shared",
                  "scope:types"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": [
                  "scope:rootui",
                  "scope:sharedui",
                  "scope:types"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
